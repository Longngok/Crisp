<div class="bg__img" style="background-color: black; --bg-img: url('{{ section.settings.img | image_url }}')">
  <div class="container p__block-17 lg-p__block" style="--padding-block: {{ section.settings.padding | append: 'rem'  }}">
    <div class="box">
      <div>
        <svg
          xmlns="http://www.w3.org/2000/svg"
          width="603"
          height="102"
          viewBox="0 0 603 102"
          fill="none">
          <path
            d="M0 1H602V101.5"
            stroke="black"
            stroke-width="2" />
        </svg>
      </div>
      <h2>
        {{ section.settings.header }}
      </h2>
      <p>
        {{ section.settings.content }}
      </p>
      <a href="{{ section.settings.link }}">
        shop now
      </a>
    </div>
  </div>
</div>


{% schema %}
  {
    "name": "Rich Text",
    "tag": "section",
    "settings": [
      {
        "type": "image_picker",
        "id": "img",
        "label": "Background"
      },
      {
        "type": "range",
        "id": "padding",
        "min": 5.9,
        "max": 7.7,
        "step": 0.1,
        "unit": "rem",
        "label": "Desktop Padding",
        "default": 5.9
      },
      {
        "type": "inline_richtext",
        "id": "header",
        "label": "Header",
        "default": "shoping without limits."
      },
      {
        "type": "inline_richtext",
        "id": "content",
        "label": "Content",
        "default": "You can choose the best option for you, and it does not matter whether you are in Prague or San Francisco. We will deliver your purchase anywhere!"
      }, {
        "type": "url",
        "id": "link",
        "label": "Button link"
      }
    ]
  }
{% endschema %}