{% liquid 
  assign grid_template_columns-rows = '--gtc-lg: 18; --gtr-lg: 2; --gap-lg: 29px;--gtc-xs:4; --gtr-xs: 3; '
  assign block_limit = section.blocks.size
%}
{% if  block_limit == 2  %}
  {%  style  %}  
  @media (min-width: 992px){
    .collage__content:nth-child(1){
      grid-column:1/10;
      grid-row:1/2;
    }
    .collage__content:nth-child(2){
      grid-column:10/19;
      grid-row:1/2;
    }
  }
  {% endstyle %}
{%  elsif block_limit == 1 %} 
  {%  style  %}  
  @media (min-width: 992px){
    .collage__content:nth-child(1){
      grid-column:1/19;
      grid-row:1/3;
    }
  }
  {% endstyle %}
{%  else %}
  {%  style  %}  
  .collage__content:nth-child(1){
    grid-column:1/5;
    grid-row:1/2;
  }
  .collage__content:nth-child(2){
    grid-column:1/5;
    grid-row:2/3;
  }
  .collage__content:nth-child(3){
    grid-column:1/5;
    grid-row:3/4;
  }
  @media (min-width: 992px){
    .collage__content:nth-child(1){
      grid-column:1/10;
      grid-row:1/2;
      padding: 0px 64px 0px 491px;
    }
    .collage__content:nth-child(2){
      grid-column:10/19;
      grid-row:1/3;
    }
    .collage__content:nth-child(3){
      grid-column:1/10;
      grid-row:2/3;
    }
  }
  {% endstyle %} 
{% endif %}

<div class="color-{{ section.settings.color_scheme }}">
  <div class="ctnr-fluid  st-collage">
    <div class="d-grid" style="{{ grid_template_columns-rows }}">
      
        {% for  block in section.blocks %}
          {% case block.type %}
          {%- when 'collection' -%}
            <div class = "card collage__content p-relative">
              <div class="card-img p-absolute top-0 left-0 w-100 h-100">
                {% if block.settings.image != blank %}
                  <a href="" class = "">
                    <img src=" {{  block.settings.image | image_url }}" alt="" class="w-100 h-100">
                  </a>
                {%- else -%}
                  {{ 'lifestyle-2' | placeholder_svg_tag: 'placeholder-svg bgr-imgplaceholder h-100 w-100' }}
                {% endif %} 
              </div>
              <div class="card-body p-relative">
                <div class="card__title">
                  <h3 class="line-height-13">{{  block.settings.title }}</h3>
                </div>
                <div class="card__des">
                  {{ block.settings.paragraph }}
                </div>
                <div class="card__button">
                  <a href="{{ block.settings.link }}" class="btn pdbtn-desktop d-inline-block btn-primary">
                    {{ block.settings.button_label }}
                  </a>
                </div>
              </div>
            </div>
          {%- when 'product' -%}
            <div class = "card collage__content p-relative">
              <div class="card-img p-absolute top-0 left-0 w-100 h-100">
                {% if block.settings.image != blank %}
                  <a href="" class = "">
                    <img src=" {{  block.settings.image | image_url }}" alt="" class="w-100 h-100">
                  </a>
                {%- else -%}
                  {{ 'lifestyle-2' | placeholder_svg_tag: 'placeholder-svg bgr-imgplaceholder h-100 w-100' }}
                {% endif %} 
              </div>
              <div class="card-body p-relative">
                <div class="card__title">
                  <h3 class="line-height-13">{{  block.settings.title }}</h3>
                </div>
                <div class="card__des">
                  {{ block.settings.paragraph }}
                </div>
                <div class="card__button">
                  <a href="{{ block.settings.link }}" class="btn pdbtn-desktop d-inline-block btn-primary">
                    {{ block.settings.button_label }}
                  </a>
                </div>
              </div>
            </div>
          {%- when 'image' -%}
            <div class = "card collage__content p-relative">
              <div class="card-img p-absolute top-0 left-0 w-100 h-100">
                {% if block.settings.image != blank %}
                  <a href="" class = "">
                    <img src=" {{  block.settings.image | image_url }}" alt="" class="w-100 h-100">
                  </a>
                {%- else -%}
                  {{ 'lifestyle-2' | placeholder_svg_tag: 'placeholder-svg bgr-imgplaceholder h-100 w-100' }}
                {% endif %} 
              </div>
              <div class="card-body p-relative">
                <div class="card__title">
                  <h3 class="line-height-13">{{  block.settings.title }}</h3>
                </div>
                <div class="card__des">
                  {{ block.settings.paragraph }}
                </div>
                <div class="card__button">
                  <a href="{{ block.settings.link }}" class="btn pdbtn-desktop d-inline-block btn-primary">
                    {{ block.settings.button_label }}
                  </a>
                </div>
              </div>
            </div>
          {% endcase %}
        {% endfor %}
     
    </div>
  </div>
</div>
