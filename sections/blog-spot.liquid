{% liquid
  assign xs-ctnr-padding = '--xs-pb: 2.4'
  assign lg-ctnr-padding = '--lg-pb: 4.6'
%}

<div class="container-fluid xs-padding-block lg-padding-block background-grey4" style="{{ xs-ctnr-padding }}; {{ lg-ctnr-padding }}">
  <h2>{{ section.settings.blog.title }}</h2>
  <div class="d-grid md-2-column lg-4-column xs-gap-18 lg-gap-30">
    {% for article in section.settings.blog.articles %}
      <div class="grid__item square">
        <div class="article__container background-secondary d-flex flex-column justify-spacebtw height-100pc">
          <div class="article__content">
            <span class="xs-h-10 lg-h-18 c-grey2">Article</span>
            <h3 class="article__heading xs-h-14 lg-h-26 truncate-text truncate-text--2line overflow-hidden">{{ article.title }}</h3>
            <div class="lg-fs-16 truncate-text truncate-text--3line overflow-hidden">
              {{ article.content }}
            </div>
          </div>
          <time class="article__date xs-h-10 d-block">{{ article.published_at | date: " %b %d, %Y" }}</time>
        </div>
      </div>s
    {% endfor %}
  </div>
</div>

{% schema %}
  {
    "name": "Multi article",
    "tag": "section",
    "settings": [
      {
        "type": "blog",
        "id": "blog",
        "label": "blog"
      }
    ]
  }
{% endschema %}